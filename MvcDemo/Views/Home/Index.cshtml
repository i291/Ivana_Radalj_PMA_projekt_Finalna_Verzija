@{
    ViewData["Title"] = "Home Page";
}


   


    
    <h1>Welcome  @User.Identity.Name !</h1>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <style>
        .mySlides {
            display: none;
        }
    </style>
    <div class="w3-container">
        <h2>Take a look at beautiful destinations!</h2>
    </div>

    <div class="w3-content w3-display-container">

        <div class="w3-display-container mySlides">
            <img src="~/image/st.jpg" style="width:100%" height="500px" />
            <div class="w3-display-bottomleft w3-large w3-container w3-padding-16 w3-black">
                Island of Hvar
            </div>
        </div>

        <div class="w3-display-container mySlides">
            <img src="~/image/Photo1.jpg" style="width:100%" height="500px" />

            <div class="w3-display-bottomright w3-large w3-container w3-padding-16 w3-black">
                Greece
            </div>
        </div>

        <div class="w3-display-container mySlides">
            <img src="~/image/istanbul.jpg" style="width:100%" height="500px" />
            <div class="w3-display-topleft w3-large w3-container w3-padding-16 w3-black">
                Istanbul
            </div>
        </div>
        <div class="w3-display-container mySlides">
            <img src="~/image/venecija.jpg" style="width:100%" height="500px" />
            <div class="w3-display-topleft w3-large w3-container w3-padding-16 w3-black">
                Venecija
            </div>
        </div>
        <div class="w3-display-container mySlides">
            <img src="~/image/tajland.jpg" style="width:100%" height="500px" />
            <div class="w3-display-topleft w3-large w3-container w3-padding-16 w3-black">
                Tajland
            </div>
        </div>

        <div class="w3-display-container mySlides">
            <img src="~/image/Rim.jpg" style="width:100%" height="500px" />
            <div class="w3-display-topright w3-large w3-container w3-padding-16 w3-black">
                Rome
            </div>
        </div>

        <div class="w3-display-container mySlides">
            <img src="~/image/pariz.jpg" style="width:100%" height="500px" />
            <div class="w3-display-middle w3-large w3-container w3-padding-16 w3-black">
                Pariz
            </div>
        </div>

        <button class="w3-button w3-display-left w3-black" onclick="plusDivs(-1)">&#10094;</button>
        <button class="w3-button w3-display-right w3-black" onclick="plusDivs(1)">&#10095;</button>

    </div>

    <script>
        var slideIndex = 1;
        showDivs(slideIndex);

        function plusDivs(n) {
            showDivs(slideIndex += n);
        }

        function showDivs(n) {
            var i;
            var x = document.getElementsByClassName("mySlides");
            if (n > x.length) { slideIndex = 1 }
            if (n < 1) { slideIndex = x.length }
            for (i = 0; i < x.length; i++) {
                x[i].style.display = "none";
            }
            x[slideIndex - 1].style.display = "block";
        }
    </script>




